@{
    Layout="_MainLayout";
}

<h3>Nova Promoção</h3>
<hr>
 
<form class="form-horizontal" method="POST" asp-controller="Promotion" asp-action="Save" id="idForm">                    
    <input class="form-control" type="hidden" name="Id" id="Id" value="0">

    <label for="txtNamePromotion">Nome</label>
    <input class="form-control" type="text" name="PromotionName" id="txtPromotionName" required autofocus>
    <br>
    <label for="txtPromotionService">Serviço</label>
    <select name="" id="" disabled="disabled">
        <option>Mapa Natal</option>
        <option>Sinastria</option>
    </select>
    @* <label for="ProdutoID">Produto</label>
    <select class="form-control" asp-for="ProdutoID" asp-items='@(new SelectList(@ViewBag.Produtos,"Id","Nome"))'></select> *@

    <label for="txtPromotionValue">Valor</label>
    <input class="form-control" type="text" name="PromotionValue" id="txtPromotionValue">
    <br>
    <input class="" type="checkbox" name="Enable" id="txtEnable">
    <label for="txtEnable">Ativo</label>
    <br>
    <label for="txtPromotionDateStart">Data de Início</label>
    <input class="form-control" type="text" name="PromotionDateStart" id="txtPromotionDateStart">

    <label for="txtPromotionDateEnd">Data de Término</label>
    <input class="form-control" type="text" name="PromotionDateEnd" id="txtPromotion">
    <hr>
    <div class="cst_btn">
        <button class="btn btn-success">Gravar</button>
        
        <a class="btn btn-secondary" href="https://localhost:5001/Promotion/Promotions">Voltar</a>
    </div>
</form>