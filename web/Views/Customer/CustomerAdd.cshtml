@model web.Models.DTO.CustomerViewModel;

@{
    Layout="_MainLayout";
}

<h3>Novo Cliente</h3>
<hr>
 
<form class="form-horizontal" method="POST" asp-controller="Customer" asp-action="Save" id="idForm">
    <div>
        <ul class="nav nav-tabs" id="myTab" role="tablist">
            <li class="nav-item">
                <a class="nav-link active" id="info-tab" data-toggle="tab" href="#info" role="tab" aria-controls="info" aria-selected="true">Informações Principais</a>
            </li>
            @* <li class="nav-item abaPerson">
                <a class="nav-link" id="person-tab" data-toggle="tab" href="#person" role="tab" aria-controls="person" aria-selected="false">Pessoa</a>
            </li>
            <li class="nav-item">
                <a class="nav-link abaCompany" id="company-tab" data-toggle="tab" href="#company" role="tab" aria-controls="company" aria-selected="false">Empresa</a>
            </li> *@
            @* <li class="nav-item">
                <a class="nav-link" id="address-tab" data-toggle="tab" href="#address" role="tab" aria-controls="address" aria-selected="false">Endereço</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" id="contact-tab" data-toggle="tab" href="#contact" role="tab" aria-controls="contact" aria-selected="false">Contato</a>
            </li> *@
        </ul>
        <br>
        <div class="tab-content" id="myTabContent">
            <div class="tab-pane fade show active" id="info" role="tabpanel" aria-labelledby="info-tab">
                <input type="hidden" asp-for="Customer.Id" value="0">
                <div>
                    <input asp-for="Customer.Type" type="radio" name="inlineRadioOptions" id="rdCustomerPerson" value="1">
                    <label for="rdCustomerPerson">Pessoa</label>
            
                    <input asp-for="Customer.Type" type="radio" name="inlineRadioOptions" id="rdCustomerCompany" value="2">
                    <label for="rdCustomerCompany">Empresa</label>
                </div>
                <div>
                    <label for="txtName">Nome Completo</label>
                    <input asp-for="Customer.FullName" class="form-control" type="text" name="FullName" id="txtName" required autofocus>
                    
                    <label for="txtDateOfBirth">Data de Nascimento</label>
                    <input asp-for="AddressBirth.DateOfBirth" class="form-control" type="date" name="DateOfBirth" id="txtDateOfBirth" required>                        
                    
                    <label for="txtBirthTime">Horário de Nascimento</label>
                    <input asp-for="AddressBirth.BirthTime" class="form-control" type="time" name="BirthTime" id="txtBirthTime" required>

                    <label for="txtCityOfBirth">Cidade de Nascimento</label>
                    <input asp-for="AddressBirth.CityBirth" class="form-control" type="text" name="CityBirth" id="txtCityOfBirth" required>

                    <label for="txtBirthState">Estado de Nascimento</label>
                    <input asp-for ="AddressBirth.BirthOfState" class="form-control" type="text" name="BirthOfState" id="txtBirthState" required>

                    <label for="txtEmail">E-mail</label>                        
                    <input asp-for="Contact.Email" class="form-control" type="text" name="Email" id="txtEmail" autofocus>
                    
                    <label for="txtMobile">Mobile</label>
                    <input asp-for="Contact.Mobile" class="form-control" type="text" maxlength="16" name="Mobile" id="txtMobile">

                    <label for="txtTelephone">Telephone</label>
                    <input asp-for="Contact.Telephone" class="form-control" type="text" maxlength="16" name="Telephone" id="txtTelephone">
                </div>
            </div>
            
            <div class="tab-pane fade" id="person" role="tabpanel" aria-labelledby="person-tab">
                <label for="txtCPF">CPF</label>
                <input v-model="cpf" mask="###.###.###-##" class="form-control" type="text" name="CPF" id="txtCPF" onkeyup="abaCompany()"> @* asp-for="CPF" *@
                
                <label for="txtDescription">Descrição</label>
                <input class="form-control" type="text" name="Description" id="txtDescription">
            </div>

            <div class="tab-pane fade" id="company" role="tabpanel" aria-labelledby="company-tab">                    
                <label for="txtCNPJ">CNPJ</label>
                <input class="form-control" type="text" name="CNPJ" id="txtCNPJ" autofocus>

                <label for="txtName">Razão Social</label>
                <input class="form-control" type="text" name="FullName" id="txtName">

                <label for="txtDateOfBirth">Nome Fantasia</label>
                <input class="form-control" type="date" name="Date" id="txtDateOfBirth">                        
                
                <label for="txtBirthTime">Representante</label>
                <input class="form-control" type="time" name="Time" id="txtBirthTime">                    

                <label for="txtBirthState">Descrição</label>
                <input class="form-control" type="text" name="BirthOfState" id="txtBirthState">
            </div>

            <div class="tab-pane fade" id="address" role="tabpanel" aria-labelledby="address-tab">
                <label for="txtAddress">Endereço</label>
                <input class="form-control" type="text" name="Address" id="txtAddress" autofocus>

                <label for="txtAddressNumber">Número</label>
                <input class="form-control" type="number" name="AddressNumber" id="txtAddressNumber">
                
                <label for="txtComplement">Complemento</label>
                <input class="form-control" type="text" name="Complement" id="txtComplement">

                <label for="txtCEP">CEP</label>
                <input class="form-control" type="text" name="CEP" id="txtCEP">                

                <label for="txtNeighborhoods">Bairro</label>
                <input class="form-control" type="text" name="Neighborhoods" id="txtNeighborhoods">
                                    
                <label for="txtCity">Cidade</label>
                <input class="form-control" type="text" name="City" id="txtCity">

                <label for="txtState">Estado</label>
                <input class="form-control" type="text" name="State" id="txtState">
            </div>

            <div class="tab-pane fade" id="contact" role="tabpanel" aria-labelledby="contact-tab">
                <label for="txtEmail">E-mail</label>                        
                <input class="form-control" type="text" name="Email" id="txtEmail" autofocus>
                
                <label for="txtMobile">Mobile</label>
                <input class="form-control" type="text" maxlength="16" name="Mobile" id="txtMobile">

                <label for="txtTelephone">Telephone</label>
                <input class="form-control" type="text" maxlength="16" name="Telephone" id="txtTelephone">
            </div>            
        </div>
    </div>
    <hr>
    <div class="cst_btn">
        <button class="btn btn-success">Gravar</button>
        
        <a class="btn btn-secondary" href="https://localhost:5001/Customer/Customers">Voltar</a>
    </div>
</form>