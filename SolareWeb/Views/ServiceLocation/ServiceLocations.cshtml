@model IEnumerable<SolareWeb.Models.ServiceLocation>
@{
    Layout = "_MainLayout";
}

<h2>Espaço do Atendimento</h2>
<hr>
<a asp-action="ServiceLocationAdd" asp-controller="ServiceLocation" class="btn btn-success">Novo Espaço de Atendimento</a>
<hr>

<table class="table table-striped table-bordred">
    <thead>
        <td>Id</td>
        <td>Nome</td>
        <td>Ações</td>
    </thead>
    <tbody>
        @foreach (var svl in Model)
        {
            <tr>
                <td>@svl.Id</td>
                <td>@svl.ServiceLocationName</td>
                <td>
                    <a class="btn btn-primary">Editar</a>
                    <form asp-action="Delete" asp-controller="ServiceLocation" style="display: inline;">
                        <input type="hidden" name="id" id="id" value="id">
                        <button class="btn btn-danger">Deletar</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>