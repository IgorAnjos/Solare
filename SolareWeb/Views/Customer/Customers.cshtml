@model IEnumerable<SolareWeb.Models.Customer>

@{
    Layout = "_MainLayout";
}

<h2>Clientes</h2>
<hr>
<a asp-action="CustomerAdd" asp-controller="Customer" class="btn btn-success">Novo Cliente</a>
<hr>

<table class="table table-striped table-bordred">
    <thead>
        <td>Nome</td>
        <td>Data de Nascimento</td>
        <td>Cidade de Nascimento</td>
        <td>Ações</td>
    </thead>
    <tbody>
        @foreach (var cst in Model)
        {
            <tr>
                <td>@cst.FullName</td>
                <td>@cst.DateOfBirth</td>
                <td>@cst.CityBirth</td>
                <td>
                    <a class="btn btn-primary">Editar</a>
                    <form asp-action="Delete" asp-controller="Customer" style="display: inline;">
                        <input type="hidden" name="id" id="id" value="id">
                        <button class="btn btn-danger">Deletar</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>