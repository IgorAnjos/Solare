@model SolareWeb.Models.Customer;

@{
    Layout="_MainLayout";
}

<h3>Novo Cliente</h3>
<hr>
 
<form class="form-horizontal" method="POST" asp-controller="Customer" asp-action="Save" id="idForm">
    <div>
        <ul class="nav nav-tabs" id="myTab" role="tablist">
            <li class="nav-item">
                <a class="nav-link active" id="info-tab" data-toggle="tab" href="#info" role="tab" aria-controls="info" aria-selected="true">Informações Principais</a>
            </li>
        </ul>
        <br>
        <div class="tab-content" id="myTabContent">
            <div class="tab-pane fade show active" id="info" role="tabpanel" aria-labelledby="info-tab">
                <input type="hidden" asp-for="Id" value="0">
                <div>
                    <input type="radio" name="inlineRadioOptions" id="rdCustomerPerson">
                    <label for="rdCustomerPerson">Pessoa</label>
            
                    <input type="radio" name="inlineRadioOptions" id="rdCustomerCompany">
                    <label for="rdCustomerCompany">Empresa</label>
                </div>
                <div>
                    <label for="txtName">Nome Completo</label>
                    <input asp-for="FullName" class="form-control" type="text" name="FullName" id="txtName" required autofocus>

                    <label for="txtDateOfBirth">Data de Nascimento</label>
                    <input asp-for="DateOfBirth" class="form-control" type="date" name="DateOfBirth" id="txtDateOfBirth" required>

                    <label for="txtBirthTime">Horário de Nascimento</label>
                    <input asp-for="BirthTime" class="form-control" type="time" name="BirthTime" id="txtBirthTime" required>

                    <label for="txtCityOfBirth">Cidade de Nascimento</label>
                    <input asp-for="CityBirth" class="form-control" type="text" name="CityBirth" id="txtCityOfBirth" required>

                    <label for="txtBirthState">Estado de Nascimento</label>
                    <input asp-for="BirthOfState" class="form-control" type="text" name="BirthOfState" id="txtBirthState" required>
                </div>
            </div>
        </div>
    </div>
    <hr>
    <div class="cst_btn">
        <button class="btn btn-success">Gravar</button>
        
        <a class="btn btn-secondary" href="https://localhost:5001/Customer/Customers">Voltar</a>
    </div>
</form>