@model SolareWeb.Models.Service;
@{
    Layout="_MainLayout";
}

<h3>Novo Serviço</h3>
<hr>
 
<form class="form-horizontal" method="POST" asp-controller="Service" asp-action="Save" id="idForm">                    
    <input asp-for="Id" class="form-control" type="hidden" name="Id" id="Id" value="0">

    <label for="txtServiceName">Nome do Serviço</label>
    <input asp-for="ServiceName" class="form-control" type="text" name="ServiceName" id="txtServiceName" required autofocus>
    <br>
    <label for="txtServiceValue">Valor</label>
    <input asp-for="Price" value="" class="form-control" type="text" name="ServiceValue" id="txtServiceValue">
    <br>
    @*<input class="" type="checkbox" name="promotion" id="txtpromotion">
    <label for="txtpromotion">Disponível para Promoção</label>*@
    <hr>
    <div class="cst_btn">
        <button class="btn btn-success">Gravar</button>
        
        <a class="btn btn-secondary" href="https://localhost:5001/Service/Services">Voltar</a>
    </div>
</form>