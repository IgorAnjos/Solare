@model IEnumerable<SolareWeb.Models.Service>
@{
    Layout = "_MainLayout";
}

<h2>Serviço</h2>
<hr>
<a asp-action="ServiceAdd" asp-controller="Service" class="btn btn-success">Novo Serviço</a>
<hr>

<table class="table table-striped table-bordred">
    <thead>
        <td>Id</td>
        <td>Serviço</td>
        <td>Valor</td>
        <td>Ações</td>
    </thead>
    <tbody>
        @foreach (var ser in Model)
        {
            <tr>
                <td>@ser.Id</td>
                <td>@ser.ServiceName</td>
                <td>@ser.Price</td>
                <td>
                    <a class="btn btn-primary">Editar</a>
                    <form asp-action="Delete" asp-controller="Service" style="display: inline;">
                        <input type="hidden" name="id" id="id" value="id">
                        <button class="btn btn-danger">Deletar</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>